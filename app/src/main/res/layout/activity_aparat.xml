<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgapp">
    <Button
        android:id="@+id/btn_ujicobalacak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lacak">
    </Button>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--menu bar-->
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="20dp"
            android:id="@+id/cv_menubar"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="50dp"
            app:contentPadding="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Tombol-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <!--tombol home-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnhome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol info-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnabout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_informasi"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol help-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnhelp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bantuan"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol logout-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnlogout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_logout" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <!--konten-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_konten"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cv_menubar">
            <!--Konten Home-->
            <LinearLayout
                android:id="@+id/linlay_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <org.osmdroid.views.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <!--tombol fokus motor-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp">
                        <!--tombol fokus motor-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_btnfokusaparat"
                            app:cardCornerRadius="50dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="@color/white">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_markermotor" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>
            <!--konten About-->
            <LinearLayout
                android:id="@+id/linlay_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"/>
            </LinearLayout>
            <!--konten help-->
            <LinearLayout
                android:id="@+id/linlay_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!--Keterangan Tombol-->

        <!--ket home-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kethome"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="260dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <!--ket about-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ketabout"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="About"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <!--ket help-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kethelp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Help"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <!-- notifikasi Kasus-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_notifikasikasus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch out !!"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/tv_notifikasikasus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your motorcycle theft has been detected"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn_lacakkemalingan"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F44336"
                            android:text="Track"
                            android:textColor="@color/white"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <!-- notifikasi lokasi -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_notifikasisensorlokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activate Location Sensor"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please activate the location sensor to proceed"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn_aktifkanlokasi"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="Ok"
                            android:textColor="@color/white"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btn_tolakaktifkanlokasi"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="#9E1111"
                            android:text="Exit"
                            android:textColor="@color/white"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</LinearLayout>