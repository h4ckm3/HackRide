<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgapp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--menu bar-->
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="20dp"
            android:id="@+id/cv_menubar"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="50dp"
            app:contentPadding="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Tombol-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <!--tombol home-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnhome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol info-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnabout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_informasi"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol help-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnhelp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bantuan"/>
                    </androidx.cardview.widget.CardView>

                    <!--tombol logout-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btnlogout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:contentPadding="2dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_logout" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <!--konten-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_konten"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cv_menubar">
            <!--Konten Home-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <org.osmdroid.views.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <!--tombol fokus user-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_btnfokuspemilik"
                            app:cardCornerRadius="50dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="@color/white">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_pemilik" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!--Keterangan Tombol-->

        <!--ket home-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kethome"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="260dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <!--ket about-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ketabout"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="About"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <!--ket help-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kethelp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cv_konten"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Help"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</LinearLayout>